---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog">
  <div class="bg-white text-black min-h-screen font-sans">
    <div class="max-w-4xl mx-auto px-4 py-8 md:px-6 md:py-12">
      <div>
        <header class="mb-20">
          <h1 class="text-4xl md:text-6xl font-bold text-black mb-8">Blog</h1>
        </header>
        
        <div class="space-y-8">
          {sortedPosts.map((post) => (
            <article class="border-b border-gray-200 pb-8">
              <div class="flex flex-col md:flex-row gap-6">
                {post.data.heroImage && (
                  <div class="md:w-1/3">
                    <a href={`/blog/${post.id}`}>
                      <img 
                        src={post.data.heroImage} 
                        alt={post.data.imageAlt || post.data.title}
                        class="w-full h-48 object-cover rounded-lg shadow-md hover:shadow-lg transition-shadow"
                      />
                    </a>
                  </div>
                )}
                <div class={post.data.heroImage ? "md:w-2/3" : "w-full"}>
                  <h2 class="text-2xl md:text-3xl font-semibold mb-3">
                    <a href={`/blog/${post.id}`} class="text-black hover:text-gray-600">
                      {post.data.title}
                    </a>
                  </h2>
                  <p class="text-gray-600 mb-3 text-base md:text-lg">{post.data.description}</p>
                  <time class="text-sm text-gray-500">
                    {post.data.pubDate.toDateString()}
                  </time>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>
